@page
@model Iteracion_2.Pages.RegistrarModel
@{
    ViewData["Title"] = "Registrar";
}

<head>
    <link rel="stylesheet" href="~/css/border-radius.css" />
    <style>
        
        .note {
            text-align: center;
            height: 80px;
            background: -webkit-linear-gradient(left, #434b4d, #808080);
            color: #fff;
            font-weight: bold;
            line-height: 80px;
        }

        .form-content {
            padding: 5%;
            border: 1px solid #ced4da;
            margin-bottom: 2%;
        }

        .form-control {
            border-radius: 1.5rem;
        }

        .btnSubmit {
            border: none;
            border-radius: 1.5rem;
            padding: 1%;
            width: 30%;
            cursor: pointer;
            background: #0062cc;
            color: #fff;
        }
    </style>
    
</head>

<h2><strong>Registrarse</strong></h2>
<br />


<label for="inputName"> @ViewData["username"] </label>

<!------ Include the above in your HEAD tag ---------->
<div class="container register-form">
    <form method="post">
        <div class="form">
            <div class="note">
                <p>Formulario de registro</p>
            </div>
            <div class="form-content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Nombre *</label>
                            <input type="text" class="form-control" placeholder="Nombre " maxlength="49" value=""name="Nombre" />
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Nombre de usuario *</label>
                            <input type="text" class="form-control" placeholder="Nombre de Usuario " value="" maxlength="49" name="nombreUsuario"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Apellido *</label>
                            <input type="text" class="form-control" placeholder="Apellido " value=""  maxlength="49" name="Apellido"/>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Correo *</label>
                            <input type="text" class="form-control" placeholder="Correo " value=""  maxlength="49" name="Correo"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Pais</label>
                            <input type="text" class="form-control" placeholder="Pais " value=""  maxlength="49" name="Pais"/>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">idioma</label>
                            <input type="text" class="form-control" placeholder="Idioma " value="" name="Idioma"/>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Hobbies</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"  maxlength="400" name="Hobbies"></textarea>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Habilidades</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"  maxlength="400" name="Habilidades"></textarea>
                        </div>

                    </div>
                </div>

            </div>

            <br />
            <br />
            <br />
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-offset-5">
                <button type="submit" class="btnSubmit">Registrarse</button>
            </div>
        </div>
    </form>
    <br />
    <br />
    <br />


</div>