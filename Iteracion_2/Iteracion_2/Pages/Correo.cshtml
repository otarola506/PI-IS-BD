@page
@model Iteracion_2.Pages.CorreoModel
@{
    ViewData["Title"] = "Correo";
}

<h1 class="display-4">Correo</h1>
<hr />
<form method="post" enctype="multipart/form-data">

    <label for="Dest">Destinatario</label><br />
    <input type="text" asp-for="sendMail.To" placeholder="Escriba el correo" style="width:300px" /><br />
    <label for="Asunto">Asunto</label> <br />

    <input type="text" asp-for="sendMail.Subject" placeholder="Escriba el asunto" style="width:300px" /><br />

    <label for="Contenido">Contenido</label><br />

    <textarea asp-for="sendMail.Body" id="txtContenido" cols="50" rows="20" placeholder="Digite el contenido aquí"></textarea><br />
    <label for="Adjuntar Archivo">Adjuntar Archivo</label><br />
    <input type="file" asp-for="sendMail.archivo" /><br />
    <input type="submit" class="btn-success" value="Enviar Correo" /><br />
    @ViewData["Message"]

</form>
@section Scripts
    {
    <script src="https://cdn.tiny.cloud/1/ppfs7sld936k48b757gwua5p0k1knn5by42zeg00gm61xqwb/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#txtContenido'
        });
    </script>
     }


