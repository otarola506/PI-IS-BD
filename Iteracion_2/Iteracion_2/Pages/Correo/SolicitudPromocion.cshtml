@page
@model Iteracion_2.Pages.Correo.SolicitudPromocionModel
@{
    ViewData["Title"] = "SolicitudPromocion";
}

<h2>SolicitudPromocion</h2>

<div>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="inputName">Destinatario</label>
            <input type="text" class="form-control" value="Coordinador@gmail.com " name="destinatario" readonly>
        </div>

        <div class="form-group">
            <label for="inputUsername">Asunto</label>
            <input type="text" class="form-control" value="Solicitud de promocion de rango" name="asunto" readonly>
        </div>
        <label for="inputName" style="color:red;"> @ViewData["username"] </label>

        <div class="form-group">
            <label for="comment">Motivo</label>
            <textarea class="form-control" rows="5" name="contenido" id="txtContenido" placeholder="Digite el motivo"></textarea>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary">Enviar solicitud</button>
                <button type="reset" class="btn btn-primary">Limpiar</button>
            </div>
        <div />

    </form>
</div>
